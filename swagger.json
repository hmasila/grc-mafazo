        "summary": "Get systems by name",
        "description": "",
        "operationId": "getSystems",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [{
            "in": "query",
            "name": "name",
            "description": "The name that needs to be fetched. Use `Organizational NIST RMF System` for testing.",
            "required": false,
            "type": "string"
          },
          {
            "in": "query",
            "name": "framework",
            "description": "The framework that needs to be fetched. Use `NIST RMF Rev 4` for testing.",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/System"
              }
            }
          },
          "400": {
            "description": "No systems found"
          },
          "404": {
            "description": "System not found"
          }
        },
        "security": [{
          "grc_auth": [
            "read_systems"
          ]
        }]
