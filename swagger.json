  "definitions": {
    "System": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64",
          "example": 829288
        },
        "name": {
          "type": "string",
          "example": "Organizational NIST RMF System"
        },
        "framework": {
          "type": "string",
          "example": "NIST RMF Rev 4"
        },
        "acronym": {
          "type": "string",
          "example": "O-NRMF"
        },
        "completion_status": {
